# OpenHands详细调试配置
# 使用方法: source .env.debug 然后启动OpenHands

# === 核心调试设置 ===
export DEBUG=true                    # 启用调试模式
export LOG_LEVEL=DEBUG              # 设置日志级别为DEBUG
export LOG_ALL_EVENTS=true          # 记录所有事件和动作
export LOG_TO_FILE=true             # 启用文件日志记录
export DEBUG_RUNTIME=true           # 显示Docker容器日志

# === 高级调试设置 (谨慎使用) ===
# export DEBUG_LLM=true             # 记录LLM请求/响应 (会暴露API密钥)
# export LOG_JSON=true              # 启用结构化JSON日志

# === 错误处理增强 ===
export STACK_TRACE_ON_ERROR=true    # 显示错误堆栈信息
export ENABLE_AUTO_RETRY=true       # 启用自动重试
export MAX_RETRIES=3                # 最大重试次数

# === 更新后的环境变量 ===
# 使用新的SANDBOX_VOLUMES替代弃用的变量
export SANDBOX_VOLUMES="/Users/huqingqing/workspace/data/openHands:/workspace:rw"
unset WORKSPACE_BASE
unset WORKSPACE_MOUNT_PATH

echo "✅ OpenHands调试环境配置完成"
echo "📝 日志将保存到: ./logs/"
echo "🔍 使用 tail -f logs/openhands_$(date +%Y-%m-%d).log 查看实时日志"